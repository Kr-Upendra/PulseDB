{
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "index.d.ts"]
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}
